{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    Current <em>bar</em> entities:
    <ul>
        {% for bar in items %}
            <li>ID: {{ bar.id }} - {{ bar.name }} <a href="clone/{{ bar.id }}">clone this</a>
                {% if bar.clonedFrom %}
                    <br />Cloned from ID: {{ bar.clonedFrom }}
                {% endif %}
                <br />This contains following <em>foo</em> entities
                <ul>
                    {% for foo in bar.foos %}
                        <li>ID: {{ foo.id }} - {{ foo.name }}</li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>

    <a href="create">Create dummy data</a>
</div>
{% endblock %}
